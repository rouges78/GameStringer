{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GameStringer",
  "version": "1.0.8",
  "identifier": "com.gamestringer.app",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "powershell -ExecutionPolicy Bypass -File scripts/build-tauri.ps1",
    "devUrl": "http://127.0.0.1:3192",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "GameStringer",
        "width": 1280,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false
      },
      {
        "label": "ocr-overlay",
        "title": "OCR Overlay",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": true,
        "url": "/ocr-overlay"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default",
        "app-events"
      ]
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi",
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  }
}
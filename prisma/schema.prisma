
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Modello per i giochi scansionati
model Game {
  id             String    @id @default(cuid())
  title          String
  platform       String
  installPath    String? // Non più univoco, può essere nullo
  executablePath String?
  icon           String?
  imageUrl       String?
  isInstalled    Boolean   @default(false)
  steamAppId     Int?      @unique
  isVr           Boolean   @default(false)
  engine         String?
  lastPlayed     DateTime?
  isShared       Boolean   @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  translations Translation[]

  @@map("games")
}

// Modelli per NextAuth.js
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  @@map("users")
  preferences   UserPreference[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model UserPreference {
  id     String @id @default(cuid())
  userId String
  key    String
  value  String
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, key])
  @@map("user_preferences")
}

// Modello per le traduzioni
model Translation {
  id              String   @id @default(cuid())
  gameId          String
  filePath        String
  originalText    String
  translatedText  String   @default("")
  targetLanguage  String
  sourceLanguage  String   @default("en")
  status          String   @default("pending") // pending, completed, reviewed, edited
  confidence      Float    @default(0)
  isManualEdit    Boolean  @default(false)
  context         String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  game            Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  suggestions     AISuggestion[]
  
  @@index([gameId])
  @@map("translations")
}

// Modello per i suggerimenti AI
model AISuggestion {
  id             String      @id @default(cuid())
  translationId  String
  suggestion     String
  confidence     Float       @default(0)
  provider       String      @default("openai") // openai, deepl, google, etc.
  
  createdAt      DateTime    @default(now())
  
  translation    Translation @relation(fields: [translationId], references: [id], onDelete: Cascade)
  
  @@map("ai_suggestions")
}

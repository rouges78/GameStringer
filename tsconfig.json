{
  "compilerOptions": {
    "target": "ES2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "downlevelIteration": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".build/types/**/*.ts",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "types/**/*.ts",
    "types/**/*.d.ts",
    "out/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src-tauri/target",
    "src-tauri/target/**"
  ]
}
